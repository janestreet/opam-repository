build: [
  ["dune" "build" "-p" name "-j" jobs]
]
depends: [
  "ocaml"         {>= "5.1.0"}
  "base"          {= "v0.18~preview.130.26+1192"}
  "ppx_optcomp"   {= "v0.18~preview.130.26+1192"}
